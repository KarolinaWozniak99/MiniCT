<Window x:Class="MTC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MTC"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <local:Panel x:Name="Lewy" Grid.Column="0" Grid.Row="0" Margin="10, 0"/>
            <local:Panel x:Name="Prawy" Grid.Column="1" Grid.Row="0" Margin="10, 0"/>
            <Button Grid.ColumnSpan="2" Grid.Row="1" Width="100" Height="30" Margin="5" Content="Copy>>" Click="Button_Click"/>
        </Grid>
    </Grid>
</Window>
